{
  "name": "lamina",
  "displayName": "Lamina",
  "description": "Lamina language support for Visual Studio Code",
  "publisher": "lamina-dev",
  "version": "0.1.2",
  "icon": "./assets/logo-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lamina-dev/LaminaVSCodePlugin.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lamina",
    "onCommand:extension.runLaminaScript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lamina",
        "aliases": [
          "Lamina",
          "lamina"
        ],
        "extensions": [
          ".lm"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./assets/logo-light.svg",
          "dark": "./assets/logo-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "lamina",
        "scopeName": "source.lamina",
        "path": "./syntaxes/lamina.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lamina",
        "path": "./snippets/lamina.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "extension.runLaminaScript",
        "title": "Run Lamina Script",
        "category": "Lamina",
        "enablement": "editorLangId == lamina",
        "icon": "./assets/logo-dark.svg"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.runLaminaScript",
          "when": "editorLangId == lamina",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Lamina Configuration",
      "properties": {
        "lamina.interpreterPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Lamina interpreter executable"
        },
        "lamina.activeCommand": {
          "type": "string",
          "default": "",
          "description": "Custom command to run Lamina scripts. Use $interpreterPath and $scriptPath as placeholders. If empty, default command will be used based on OS."
        }
      }
    }
  },
  "scripts": {
    "vscode:compile": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/vscode": "^1.98.0",
    "typescript": "^5.9.2",
    "vscode": "^1.1.37"
  }
}
